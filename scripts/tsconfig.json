{
  "include": [
    "./components/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS", 
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true, 
    "jsx": "preserve", 
    "sourceMap": true, 
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "types": [
      "node",
      "yargs",
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true 
  }
}